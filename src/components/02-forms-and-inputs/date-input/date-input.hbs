<!-- SASS: src/stylesheets/_components/date-input.scss -->
<!-- JS: src/js/date-input.js -->
<!-- Vendor JS: src/js/_vendor/bootstrap-datepicker.js -->

<fieldset>
  <legend>Set a Date</legend>

  <label for="startDate">Start Date</label>
  <!-- Datepicker input start -->
  <div class="vaux-date-picker-input">
    <input id="startDate" name="startDate" type="text" aria-expanded="false"  data-datepicker-trigger>
    <button class="usa-button" aria-label="Open Calendar"  data-datepicker-trigger><i class="fa fa-calendar" aria-hidden="true"></i></button>
  </div>
  <!-- Datepicker input end -->
</fieldset>

<fieldset>

  <label for="endDate">End Date</label>
  <!-- Datepicker input start -->
  <div class="vaux-date-picker-input">
    <input id="endDate" name="endDate" type="text" aria-expanded="false" data-datepicker-trigger>
    <button class="usa-button" aria-label="Open Calendar" data-datepicker-trigger><i class="fa fa-calendar" aria-hidden="true"></i></button>
  </div>
  <!-- Datepicker input end -->
</fieldset>

<label for="dateofBirth">Date of Birth</label>
<input id="dateofBirth" name="dateofBirth" type="date">

<br><br>

<div class="usa-date-of-birth">
    <label>Date of Birth</label>
    <div class="usa-form-group usa-form-group-month">
        <label for="date_of_birth_1">MM</label>
        <input class="usa-input-inline" aria-describedby="dobHint" id="date_of_birth_1" name="date_of_birth_1" pattern="0?[1-9]|1[012]" type="number" min="1" max="12" value="">
    </div>
    <div class="usa-form-group usa-form-group-day">
        <label for="date_of_birth_2">DD</label>
        <input class="usa-input-inline" aria-describedby="dobHint" id="date_of_birth_2" name="date_of_birth_2" pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" type="number" min="1" max="31" value="">
    </div>
    <div class="usa-form-group usa-form-group-year">
        <label for="date_of_birth_3">YYYY</label>
        <input class="usa-input-inline" aria-describedby="dobHint" id="date_of_birth_3" name="date_of_birth_3" pattern="[0-9]{4}" type="number" min="1900" max="2000" value="">
    </div>
</div>
