  <ul class="usa-unstyled-list">
    <li>
      <input id="stantontwo" type="radio" checked name="historical-figures-2-error" value="stanton">
      <label for="stantontwo">Elizabeth Cady Stanton</label>
    </li>
    <li>
      <input id="anthonytwo" type="radio" name="historical-figures-2-error" value="anthony">
      <label for="anthonytwo">Susan B. Anthony</label>
    </li>
    <li>
      <input id="tubmantwo" type="radio" name="historical-figures-2-error" value="tubman">
      <label for="tubmantwo">Harriet Tubman</label>
    </li>
  </ul>
</fieldset>